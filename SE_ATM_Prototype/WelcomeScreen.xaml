<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="SE_ATM_Prototype.WelcomeScreen"
	x:Name="Window"
	Title="WelcomeScreen"
	Width="640" Height="480">

	<Grid x:Name="LayoutRoot">
		<TextBlock Height="24" Margin="282.975,55,0,0" TextWrapping="Wrap" Text="Hello!" VerticalAlignment="Top" Width="83.122" FontSize="18.667" HorizontalAlignment="Left"/>
		<TextBlock Height="24" Margin="200,83,0,0" TextWrapping="Wrap" Text="Please enter your Name and PIN to proceed" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox Height="19" Name="User" Margin="268,111,273,0" TextWrapping="Wrap" Text="Enter Name" VerticalAlignment="Top"/>
        <TextBox Height="19" Name="Pin" Margin="268,140,273,0" TextWrapping="Wrap" Text="Enter PIN" VerticalAlignment="Top"/>
		<Button HorizontalAlignment="Right" Height="19" Margin="0,175,280,0" VerticalAlignment="Top" Width="60" Content="Login" Click="ok_click"/>
        <Button HorizontalAlignment="Right" Height="19" Margin="0,205,280,0" VerticalAlignment="Top" Width="60" Content="Exit"  Click="exit_click"/>
	</Grid>
</Window>